{% extends 'base.html.twig' %}

{% block title %}Compte utilisateur
{% endblock %}

{% block body %}
	<div class="container-fluid p-0 m-5 ">
		<div class="row mb-5">
			<div class="col-md-1"></div>
			<div class="col-md-6 ">
				<div class="card" style="height:40rem;">
					<h2 class="card-header bg-bleu text-white py-3 ">Bienvenue
						{{app.user.firstname}}
						{{app.user.lastname}}</h2>

					<div class="card-body">
						<p class=" h2 card-text font-weight-bold text-rouge mb-3">
							<u>Vos informations :</u>
						</p>
						<div class="row mb-1">
							<div class="col-md-6">
								<p class="h3 col-md card-text fw-bold p-0 m-auto ">
									Nom :
								</p>
								<p class="h4 col-md card-text ps-4 pt-1 m-0">
									{{app.user.lastname}}
								</p>
							</div>
							<div class="col-md-6">
								<p class="h3  col-md card-text fw-bold p-0 m-auto ">
									Prénom :
								</p>
								<p class="h4 col-md card-text ps-4 pt-1 m-0">
									{{app.user.firstname}}
								</p>
							</div>
						</div>
						<div class="">
							<p class="h3 col-md card-text fw-bold p-0 m-auto ">
								Date de naissance :
							</p>
							<p class="h4 col-md card-text ps-4 pt-1 m-0">
								{{app.user.dateBirth|format_datetime('short', 'none', locale='fr')}}
							</p>
						</div>
						<div class="row mt-1">
							<div class="col-md-6">
								<p class="h3 col-md card-text fw-bold p-0 m-auto ">
									Téléphone :
								</p>
								<p class="h4 col-md card-text ps-4 pt-1 m-0">
									{{app.user.phone}}
								</p>
							</div>
							<div class="col-md-6">
								<p class="h3 col-md card-text fw-bold p-0 m-auto ">
									E-mail :
								</p>
								<p class="h4 col-md card-text ps-4 pt-1 m-0">
									{{app.user.email}}
								</p>
							</div>
						</div>
						<div class="row mt-4">
							<p class="h3 col-md card-text fw-bold ps-2 m-auto ">
								Votre adresse :
							</p>
							<div class="row  my-1">
								<div class="col-md-6">
									<p class="h4  col-md card-text ps-4 pt-1 mx-auto">{{app.user.address}}</p>
									<p class="h4  col-md card-text ps-4 pt-1 mx-auto">{{app.user.complement}}</p>
								</div>
								<div class="col-md-6">
									<p class="h4  col-md card-text ps-4 pt-1 m-0">
										{{app.user.codePostal}}
									</p>
									<p class="h4 col-md card-text ps-4 pt-1 m-0">
										{{app.user.city}}
									</p>
								</div>
							</div>
						</div>
						<div class="mt-3">
							<p class="h3 col-md card-text fw-bold p-0 m-auto ">
								Mot de passe :
							</p>
							<p class="h4 col-md card-text ps-2 py-0 m-0">
								*******
							</p>
						</div>
					</div>
					<div class="card-footer d-flex justify-content-center bg-bleu ">
						<a class="btn-lg btn-primary bg-rouge border-white " href="{{ path('account_edit', {'id': app.user.id}) }}">Any change ?</a>
					</div>
				</div>
			</div>
			<div class="col-md-2"></div>
			<div class="col-md-2">
				<div class="dropdown ">
					<button class="btn-lg btn-secondary dropdown-toggle bg-rouge w-100 " type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown">
						<h4>Playlist</h4>
					</button>
					<ul class="dropdown-menu h2" aria-labelledby="dropdownMenuButton1">
						{% for wish in whishlist %}
							{% if wish.user.id == app.user.id %}
								<li>
									<a class="dropdown-item h2" href="#">{{ wish.name}}</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
