{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container my-5 p-5 d-flex justify-content-center">
		<div class="card" style="width: 50rem;">
			<div class="h2 card-header bg-bleu text-white">Log in!</div>
			<div class="card-body">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}
					<h1 class="h2 mb-3 font-weight-normal">Please log in</h1>
					<label for="inputEmail " class="h4">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-cyan" autocomplete="email" required autofocus>
					<label for="inputPassword" class="mt-4 h4">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control bg-cyan" autocomplete="current-password" required>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></div>
				<div
					class="card-footer d-flex justify-content-around">
					{#
																																																							                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																							                    See https://symfony.com/doc/current/security/remember_me.html
																																																							
																																																							                    <div class="checkbox mb-3">
																																																							                        <label>
																																																							                            <input type="checkbox" name="_remember_me"> Remember me
																																																							                        </label>
																																																							                    </div>
																																																							                #}
					<div>
						<button class="btn btn-lg btn-primary" type="submit">
							Log in
						</button>
					</div>
					<div class="d-flex align-items-center">
						Haven't an account ?
						<a href="{{path('app_register')}}">Sign in</a>
					</div>
					<div class="d-flex align-items-center">
						Forgot password ?
						<a href="{{path('app_forgot_password_request')}}">Reset password</a>
					</div>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
